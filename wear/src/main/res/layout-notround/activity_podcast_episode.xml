<?xml version="1.0" encoding="utf-8"?>
<android.support.wear.widget.drawer.WearableDrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/podcast_episode_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/podcast_episode_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingBottom="50dp"
            android:visibility="invisible">

            <android.widget.TextClock
                android:id="@+id/podcast_episode_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:format24Hour="HH:mm a"
                android:format12Hour="h:mm a"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/podcast_episode_title_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_marginBottom="5dp"
                android:maxWidth="40dp"
                android:layout_below="@+id/podcast_episode_clock"
                />

            <TextView
                android:id="@+id/podcast_episode_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_below="@+id/podcast_episode_title_image"
                android:lines="2" />

            <RelativeLayout
                android:id="@+id/podcast_episode_buttons_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_below="@+id/podcast_episode_title"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_skip_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_skip_back"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:visibility="invisible"
                    android:background="?android:attr/selectableItemBackground"
                    />

                <TextView
                    android:id="@+id/tv_skip_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ic_skip_back"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="2dp"
                    android:visibility="invisible"
                    android:background="?android:attr/selectableItemBackground"
                    android:textSize="9sp"
                    />

                <ImageView
                    android:id="@+id/ic_podcast_playpause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_action_episode_play"
                    />

                <ImageView
                    android:id="@+id/ic_skip_forward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_skip_forward"
                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="invisible"
                    android:background="?android:attr/selectableItemBackground"
                    />

                <TextView
                    android:id="@+id/tv_skip_forward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ic_skip_forward"
                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp"
                    android:visibility="invisible"
                    android:background="?android:attr/selectableItemBackground"
                    android:textSize="9sp"
                    />
            </RelativeLayout>

            <ProgressBar
                android:id="@+id/podcast_episode_progress_circle"
                android:layout_width="120dp"
                android:layout_height="74dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:progressDrawable="@drawable/circular_progress_episode"
                android:visibility="gone"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_below="@+id/podcast_episode_buttons_layout"
                />

            <ProgressBar
                android:id="@+id/podcast_episode_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:layout_marginTop="6dp"
                style="@android:style/Widget.Material.ProgressBar.Horizontal"
                android:layout_below="@+id/podcast_episode_progress_circle"
                />

            <RelativeLayout
                android:id="@+id/podcast_episode_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/podcast_episode_progress_bar"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/tv_podcast_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:textSize="12sp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    />

                <SeekBar
                    android:id="@+id/sb_podcast_episode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="11dp"
                    android:layout_marginStart="-10dp"
                    android:layout_marginEnd="-10dp"
                    />

                <TextView
                    android:id="@+id/tv_podcast_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:textSize="12sp" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/ic_volume_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_volume_down"
                android:background="?android:attr/selectableItemBackground"
                android:layout_below="@+id/podcast_episode_info_layout"
                android:layout_alignParentStart="true"
                android:layout_marginStart="35dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/ic_volume_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/podcast_episode_info_layout"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_action_volume_up"
                android:visibility="gone" />

            <TextView
                android:id="@+id/podcast_episode_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/ic_volume_up"
                android:textSize="12sp"
                android:textColor="@color/red"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/podcast_episode_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_below="@+id/podcast_episode_error"
                android:textSize="14sp"
                android:layout_marginBottom="20dp"
                />
        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.wear.widget.drawer.WearableNavigationDrawerView
        android:id="@+id/drawer_nav_episode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <android.support.wear.widget.drawer.WearableActionDrawerView
        android:id="@+id/drawer_action_episode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</android.support.wear.widget.drawer.WearableDrawerLayout>