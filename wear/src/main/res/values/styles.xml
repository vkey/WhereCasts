<resources>

    <style name="Main" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:buttonTint">@color/wc_checkboxes</item>
        <item name="android:textColor">@color/wc_text</item>
        <item name="colorAccent">@color/wc_checkboxes</item>
    </style>

    <style name="Theme.PrefSettings" parent="Main">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:titleTextStyle">@style/CenteredTitle</item>
        <item name="android:windowTitleStyle">@style/CenteredTitle</item>
        <item name="android:alertDialogTheme">@style/PopupMenuStyle</item>
        <item name="android:background">@color/wc_transparent</item>
    </style>

    <style name="PopupMenuStyle" parent="Main">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="CenteredTitle" parent="Main">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Dark" parent="Main">
        <item name="android:background">@color/wc_background_dark</item>
    </style>

    <style name="Light" parent="Main">
        <item name="android:background">@color/wc_background_light</item>
        <item name="android:textColor">@color/wc_textColor_light</item>
    </style>

    <style name="AMOLED" parent="Main">
        <item name="android:background">@color/wc_background_amoled</item>
    </style>

    <style name="podcast_list_unread_count">
        <item name="android:textSize">11sp</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Main.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Main.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
