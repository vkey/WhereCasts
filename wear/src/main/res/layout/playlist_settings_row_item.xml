<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playlist_row_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/playlist_row_item_name"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:maxLength="12"
        android:imeOptions="actionDone"
        />

        <ImageView
            android:id="@+id/playlist_row_item_button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/playlist_row_item_name"
            android:textSize="12sp"
            android:background="@drawable/ic_action_delete_playlist"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            />
</RelativeLayout>